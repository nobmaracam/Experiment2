//ITEM NUMBER 4
#include <iostream>
#include <conio.h>
using namespace std;
int main(){
	
	int num1, num2, num3, largest;
	
	cout<<"Value of first number: "; cin>>num1;
	cout<<"Value of second number: "; cin>>num2;
	cout<<"Value of third number: "; cin>>num3;
	
	if(num1 > num2){
		largest = num1;
	}
	else if(num2 > num1){
		largest = num2;
	}
	if (largest > num3){
		largest = largest;
	}
	else{
		largest = num3;
	}
	cout<<"Largest number of the three is: "<<largest;

	return 0;
	_getch();
}
